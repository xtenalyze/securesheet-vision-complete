# SecureVision Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Demo mode (set to 'false' for production)
NEXT_PUBLIC_DEMO_MODE=false

# Application URL (will be your deployed URL)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# GOOGLE INTEGRATION
# =============================================================================

# Your Google Apps Script Web App URL
# Get this by deploying your Apps Script as a web app
NEXT_PUBLIC_GOOGLE_SCRIPT_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec

# Your Google Sheets ID (from the spreadsheet URL)
NEXT_PUBLIC_GOOGLE_SHEETS_ID=your_google_sheets_id_here

# =============================================================================
# OPTIONAL FEATURES
# =============================================================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Custom branding (these can be set via the setup wizard instead)
# NEXT_PUBLIC_COMPANY_NAME=Your Company Name
# NEXT_PUBLIC_PRIMARY_COLOR=#3366BB
# NEXT_PUBLIC_ACCENT_COLOR=#FF7733

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# For static export (GitHub Pages, Netlify)
# EXPORT_MODE=true

# For Vercel deployment
# VERCEL_URL will be automatically set by Vercel
